                                                <tools:RibbonButton
                                                        Name="PART_AboveButton"
                                                        Width="auto"
                                                        Margin="0,1"
                                                        Command="tools:RibbonCommands.PlaceQATAbove"
                                                        Foreground="{StaticResource SecondaryForeground}"
                                                        Label="{Binding Source={StaticResource ResourceWrapperKey}, Path=QATShowAbove}"
                                                        Style="{StaticResource SyncfusionQATMenuItemRibbonButtonStyle}"
                                                        Visibility="Collapsed" />
                                                <tools:RibbonButton
                                                        Name="PART_BelowButton"
                                                        Width="auto"
                                                        Margin="0,1"
                                                        Command="tools:RibbonCommands.PlaceQATBelow"
                                                        Foreground="{StaticResource SecondaryForeground}"
                                                        Label="{Binding Source={StaticResource ResourceWrapperKey}, Path=QATShowBelow}"
                                                        Style="{StaticResource SyncfusionQATMenuItemRibbonButtonStyle}" />
