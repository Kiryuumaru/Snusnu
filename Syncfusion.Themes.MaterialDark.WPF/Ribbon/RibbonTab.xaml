                                Name="PART_PanelEx"
                                MinHeight="25"
                                Margin="0,-1,0,0"
                                windows_shared:WindowChrome.IsHitTestVisibleInChrome="True"
                                MaxRightWidth="30"
                                MinRightWidth="30">
